<!DOCTYPE html>
<html lang="en">
<head>
   
    <script src="/js/toDo.js"> </script>
    <link rel="stylesheet" href="/css/style.css" type="text/css" >
    <%- include('./partials/head.ejs')%>
</head>
<body>

       <!-- navbar -->

       <nav class="navbar">
        <button type="button" class="btn btn-info" onclick="user(event)">USER</button>
         <a type="button" class="btn btn-danger" href="/logout" >Log Out</a>
       </nav>

     

       <!-- navbar end -->

       <!-- user -->
       <form class="form container">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Email address</label>
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
          <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <div class="mb-3">
          <label for="exampleInputfirstName" class="form-label">First Name</label>
          <input type="text" class="form-control" id="exampleInputfirstName">
        </div>
        <div class="mb-3">
          <label for="exampleInputlastname" class="form-label">Last Name</label>
          <input type="text" class="form-control" id="exampleInputlastname">
        </div>
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

       <!-- user end -->
       <header id="header">
        <h1><b>TASKS FOR THE DAY</b></h1>
        <br>
        <br>
            <form id="taskform">
                <input type="text" name="taskinput" id="taskinput" placeholder=" Enter your plan for the day">
               <div id="submitTodo"> <input type="submit" id="tasksubmit" value="Add Task" onclick="onSubmitTodo(event)"></div>
                
                <br>
                <span id="errorMsg"></span>

            </form>
          <br>
    
        </header>
        <main id="main">
            <section class="tasklist">
                
                <h1 >MY TO DO LIST </h1>
                <button type="submit" id="del" onclick="deleted(event)">Delete</button>
                <br>
                <div id="tasks">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>ToDo</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody id="toDoBody">
               
                    <% allTodos.forEach((index)=>{ %>
                       
                        <tr>
                    
                        <td>
                            <%= index.id%>
                        </td>
                        <td>
                            <%= index.todo%>
                        </td>
                        <td>
                            <input type=checkbox title = "check" class = "checkbox" data-todoId="<%-index.id%>" onclick = "update(this)" 
                                <%= index.isDone?'checked':'' %>> 
                                <button id="btn" data-todoId="<%-index.id%>" onclick = "getTodo(this)" >Update</button>
                        </td>
                    <%})%>
                </tr>
            </tbody>
        </table>
                </div>
            </section>
            
        </main>
        </div>
       
    
</body>
</html>